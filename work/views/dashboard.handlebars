<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">+ Create New Post</button>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ul class="post-list">
    {{#each posts as |post|}}
    <li>
        <div class="blog-card">
            {{> post-card post }}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </div>      
    </li>
    {{/each}}
    </ul>
</section>
{{else}}
<section>
    <h3>You haven't posted anything yet</h3>
</section>
{{/if}}

<script src="/js/create-post.js" ></script>